{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "importOrderParserPlugins": ["typescript"],
  "importOrder": [
    "^@constants/(.*)$",
    "^@interfaces/(.*)$",
    "^@services/(.*)$",
    "^@components/(.*)$",
    "^@models/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "singleAttributePerLine": true,
  "bracketSameLine": true
}
